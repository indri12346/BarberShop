<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".populaterecyclerview.ui.ClosingActivity"
    android:background="#14213D">
    <ImageView
        android:id="@+id/backclose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_baseline_navigate_before_24"
        android:backgroundTint="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="544dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Nilai transaksi"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="70sp"/>
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/putih"
        android:layout_marginBottom="-50dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/buttondata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="Pelanggan Hari Ini"
                android:textColor="#14213D"
                android:textStyle="bold" />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="10 Transaksi"
                android:textSize="12dp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnclose"
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="540dp"
        app:cornerRadius="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Close"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        >
    </com.google.android.material.button.MaterialButton>

</RelativeLayout>

