<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".populaterecyclerview.ui.TransaksiActivity"
    android:background="#14213D"
    >

    <ImageView
        android:id="@+id/back1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16sp"
        android:background="@drawable/ic_baseline_navigate_before_24"
        android:backgroundTint="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai transaksi"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50sp"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30.000"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="60sp" />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="250pt"
        android:orientation="vertical"
        android:background="@drawable/putih"
        android:layout_marginBottom="-50dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih paket"
            android:textColor="#14213D"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="32sp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp" />



        <com.google.android.material.card.MaterialCardView
            android:layout_width="147dp"
            android:id="@+id/btnpotong"
            android:layout_height="96dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="30pt"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="35dp"
                    android:text="Potong\n Anak"
                    android:textColor="#14213D"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="147dp"
            android:layout_height="96dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="30pt"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="35dp"
                    android:text="Potong\n Dewasa"
                    android:textColor="#14213D"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btntransaksi"
            android:layout_width="311dp"

            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="85dp"
            app:cornerRadius="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Cetak"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            >
        </com.google.android.material.button.MaterialButton>

    </FrameLayout>



</RelativeLayout>